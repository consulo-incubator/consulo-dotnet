<idea-plugin>
	<id>org.mustbe.consulo.xdotnet</id>
	<name>Cross .NET</name>
	<depends>org.mustbe.consulo.microsoft.dotnet</depends>
	<depends>org.mustbe.consulo.dotnet.mono</depends>

	<extensions defaultExtensionNs="com.intellij">
		<errorHandler implementation="com.intellij.diagnostic.ITNReporter" />

		<moduleExtensionProvider key="x-dotnet"
								 name="X .NET"
								 icon="/icons/dotnet.png"
								 immutableClass="org.mustbe.consulo.xdotnet.module.extension.XDotNetModuleExtension"
								 mutableClass="org.mustbe.consulo.xdotnet.module.extension.XDotNetMutableModuleExtension" />

		<moduleExtensionProvider key="x-csharp"
								 parentKey="x-dotnet"
								 name="C#"
								 icon="/icons/dotnet.png"
								 immutableClass="org.mustbe.consulo.xdotnet.module.extension.XCSharpModuleExtension"
								 mutableClass="org.mustbe.consulo.xdotnet.module.extension.XCSharpMutableModuleExtension"/>
	</extensions>
</idea-plugin>