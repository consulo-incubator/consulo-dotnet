<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
	<id>org.mustbe.consulo.dotnet.core</id>
	<name>.NET Core</name>
	<resource-bundle>messages.DotNetBundle</resource-bundle>

	<xi:include href="/META-INF/CSharp.xml" xpointer="xpointer(/idea-plugin/*)" />
	<xi:include href="/META-INF/CSharpInspections.xml" xpointer="xpointer(/idea-plugin/*)" />

	<application-components>
		<component>
			<implementation-class>org.mustbe.consulo.dotnet.dll.vfs.DotNetArchiveFileSystem</implementation-class>
		</component>
	</application-components>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.mustbe.consulo.dotnet.dll.DotNetDllFileTypeFactory" />

		<!--<packageViewHelper implementation="org.mustbe.consulo.dotnet.ide.projectView.DotNetPackageViewHelper" /> -->

		<configurationType implementation="org.mustbe.consulo.dotnet.run.DotNetConfigurationType"/>
		<programRunner implementation="org.mustbe.consulo.dotnet.run.DotNetDebuggerProgramRunner" />

		<compiler implementation="org.mustbe.consulo.dotnet.compiler.DotNetCompiler"/>
		<compiler implementation="org.mustbe.consulo.dotnet.compiler.DotNetDependencyCopier" />
		<compiler.moduleScopeFactory implementation="org.mustbe.consulo.dotnet.compiler.DotNetCompileModuleScopeFactory" />

		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.NamespaceByQNameIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.TypeIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.TypeByQNameIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.MethodIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.MethodByQNameIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.MemberByNamespaceQNameIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.FieldIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.PropertyIndex" />
		<stubIndex implementation="org.mustbe.consulo.dotnet.psi.stub.index.EventIndex" />

		<resolveScopeEnlarger implementation="org.mustbe.consulo.csharp.lang.psi.impl.resolve.CSharpResolveScopeEnlarger" />

		<projectService serviceInterface="org.mustbe.consulo.dotnet.compiler.DotNetCompilerConfiguration"
						serviceImplementation="org.mustbe.consulo.dotnet.compiler.DotNetCompilerConfiguration"/>
	</extensions>
</idea-plugin>